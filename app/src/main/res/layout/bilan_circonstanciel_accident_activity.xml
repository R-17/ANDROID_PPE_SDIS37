<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BilanCirconstancielAccidentActivity"
        android:background="@android:color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="920dp"
            android:layout_height="460dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ll_bilan_circonstanciel_accident">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="681dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_accident"
                    android:background="@drawable/ll_rectangle_bord_haut_gauche_rond">
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_si_accident">
                    <TextView
                            android:text="@string/si_accident"
                            android:id="@+id/tv_si_accident"
                            style="@style/tv_condition"/>
                    <View
                            android:id="@+id/v_si_accident"
                            style="@style/v_condition"
                            android:layout_toEndOf="@+id/tv_si_accident"/>
                </RelativeLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="420dp">
                    <TextView
                            android:id="@+id/tv_blesse"
                            android:text="@string/blesse"
                            style="@style/tv_libelle_centre"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_blesse_pieton_auto_agricole"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_blesse_pieton"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_blesse_pieton"
                                android:text="@string/pieton"
                                android:layout_toEndOf="@id/btn_blesse_pieton"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_auto"
                                android:layout_toEndOf="@id/tv_blesse_pieton"
                                android:layout_marginLeft="35.5dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_blesse_auto"
                                android:text="@string/auto"
                                android:layout_toEndOf="@id/btn_blesse_auto"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_agricole"
                                android:layout_toEndOf="@id/tv_blesse_auto"
                                android:layout_marginLeft="77.5dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_blesse_agricole"
                                android:text="@string/vehicule_agricole"
                                android:layout_toEndOf="@id/btn_blesse_agricole"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_blesse_cycliste_bus_train"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_blesse_cycliste"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_blesse_cycliste"
                                android:text="@string/cycliste"
                                android:layout_toEndOf="@id/btn_blesse_cycliste"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_bus"
                                android:layout_toEndOf="@id/tv_blesse_cycliste"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_blesse_bus"
                                android:text="@string/bus"
                                android:layout_toEndOf="@id/btn_blesse_bus"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_train"
                                android:layout_toEndOf="@id/tv_blesse_bus"
                                style="@style/btn_carre_blanc_droite"
                                android:layout_marginLeft="87.5dp"/>
                        <TextView
                                android:id="@+id/tv_btn_blesse_train"
                                android:text="@string/train"
                                android:layout_toEndOf="@id/btn_blesse_train"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_blesse_moto_lourd_autre"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_blesse_moto"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_blesse_moto"
                                android:text="@string/moto"
                                android:layout_toEndOf="@id/btn_blesse_moto"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_lourd"
                                android:layout_toEndOf="@id/tv_blesse_moto"
                                android:layout_marginLeft="46dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_blesse_lourd"
                                android:text="@string/poids_lourd"
                                android:layout_toEndOf="@id/btn_blesse_lourd"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_blesse_autre"
                                android:layout_toEndOf="@id/tv_blesse_lourd"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_blesse_autre"
                                android:text="@string/autre"
                                android:layout_toEndOf="@id/btn_blesse_autre"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                    <TextView
                            android:id="@+id/tv_contre"
                            android:text="@string/contre"
                            style="@style/tv_libelle_centre"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_contre_mur_auto_agricole"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_contre_mur"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_contre_mur"
                                android:text="@string/mur"
                                android:layout_toEndOf="@id/btn_contre_mur"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_auto"
                                android:layout_toEndOf="@id/tv_contre_mur"
                                android:layout_marginLeft="58dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_auto"
                                android:text="@string/auto"
                                android:layout_toEndOf="@id/btn_contre_auto"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_agricole"
                                android:layout_marginLeft="72dp"
                                android:layout_toEndOf="@id/tv_contre_auto"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_agricole"
                                android:text="@string/vehicule_agricole"
                                android:layout_toEndOf="@id/btn_contre_agricole"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_arbre"
                                android:layout_toEndOf="@id/tv_contre_agricole"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_arbre"
                                android:text="@string/arbre"
                                android:layout_toEndOf="@id/btn_contre_arbre"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_contre_cycliste_bus_train"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_contre_cycliste"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_contre_cycliste"
                                android:text="@string/cycliste"
                                android:layout_toEndOf="@id/btn_contre_cycliste"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_bus"
                                android:layout_toEndOf="@id/tv_contre_cycliste"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_bus"
                                android:text="@string/bus"
                                android:layout_toEndOf="@id/btn_contre_bus"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_train"
                                android:layout_toEndOf="@id/tv_contre_bus"
                                android:layout_marginStart="82.5dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_train"
                                android:text="@string/train"
                                android:layout_toEndOf="@id/btn_contre_train"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_contre_moto_lourd_autre"
                            android:orientation="horizontal"
                            style="@style/rl_marge">
                        <Button
                                android:id="@+id/btn_contre_moto"
                                style="@style/btn_carre_blanc_gauche"/>
                        <TextView
                                android:id="@+id/tv_contre_moto"
                                android:text="@string/moto"
                                android:layout_toEndOf="@id/btn_contre_moto"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_lourd"
                                android:layout_toEndOf="@id/tv_contre_moto"
                                android:layout_marginStart="46dp"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_lourd"
                                android:text="@string/poids_lourd"
                                android:layout_toEndOf="@id/btn_contre_lourd"
                                style="@style/tv_libelle_precision_centre"/>
                        <Button
                                android:id="@+id/btn_contre_autre"
                                android:layout_toEndOf="@id/tv_contre_lourd"
                                style="@style/btn_carre_blanc_droite"/>
                        <TextView
                                android:id="@+id/tv_contre_autre"
                                android:text="@string/autre"
                                android:layout_toEndOf="@id/btn_contre_autre"
                                style="@style/tv_libelle_precision_centre"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="229dp"
                    android:background="@drawable/ll_rectangle_bord_haut_droit_rond">
                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:id="@+id/rl_si_conducteur_blesse">
                    <TextView
                            android:text="@string/Si_conducteur_blesse"
                            android:id="@+id/tv_si_conducteur_blesse"
                            style="@style/tv_condition"/>
                </RelativeLayout>
                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:id="@+id/rl_emplacement">
                    <RadioGroup
                            android:id="@+id/rg_vehicule"
                            style="@style/rg_normal">
                        <RadioButton
                                android:text="@string/hors_vehicule"
                                android:id="@+id/rb_hors_vehicule"
                                style="@style/rb_normal"/>
                        <RadioButton
                                android:text="@string/dans_vehicule"
                                android:id="@+id/rb_dans_vehicule"
                                style="@style/rb_normal"/>
                    </RadioGroup>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/rl_emplacement_selon"
                        android:orientation="horizontal"
                        style="@style/rl_marge">
                    <Spinner
                            android:id="@+id/spn_selon"
                            style="@style/spn_normal"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>