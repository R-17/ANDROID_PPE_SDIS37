<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity" android:layout_centerHorizontal="false" android:layout_centerInParent="false"
        android:layout_centerVertical="false" android:layout_gravity="center|center_horizontal|center_vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="460dp"
            android:layout_height="603dp"
            android:id="@+id/ll_logo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/white">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lv_logo_sdis37"
                android:src="@drawable/img_logo_sdis37" android:background="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="500dp"
            android:layout_height="fill_parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ll_logo"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/ll_accueil">
        <Button
                android:text="Nouvelle fiche bilan"
                android:layout_width="375dp"
                android:layout_height="75dp" android:id="@+id/btn_nouvelle_fiche"
                android:background="@drawable/btn_accueil" android:layout_gravity="center"
                android:layout_marginTop="100dp" android:layout_marginBottom="20dp"
                style="@style/btn_accueil" android:drawableLeft="@drawable/img_fiche"
                android:drawablePadding="2dip"
                android:paddingLeft="30dip"
                android:paddingRight="26dip"/>
        <Button
                android:text="Fiches bilans"
                android:layout_width="375dp"
                android:layout_height="75dp" android:id="@+id/btn_fiches"
                android:background="@drawable/btn_accueil" android:layout_gravity="center"
                android:layout_marginBottom="50dp" android:layout_marginTop="20dp" style="@style/btn_accueil"
                android:drawableLeft="@drawable/img_suivi_fiche"
                android:drawablePadding="2dip"
                android:paddingLeft="30dip"
                android:paddingRight="80dip"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn_sortir"
                    android:background="@drawable/btn_accueil_sortie" android:gravity="top|left"
                    android:layout_gravity="center" android:layout_marginLeft="20dp"
                    android:drawableStart="@drawable/img_sortir"
                    android:drawablePadding="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"/>
            <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/btn_parametre"
                    android:background="@drawable/btn_accueil_parametre"
                    android:layout_gravity="center"
                    android:layout_marginLeft="265dp"
                    android:drawableStart="@drawable/img_parametre"
                    android:drawablePadding="10dip"
                    android:paddingLeft="19dip"
                    android:paddingRight="10dip"/>/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>