<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BilanUrgenceVitaleActivity"
        android:background="@android:color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="740dp"
            android:layout_height="468dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/ll_urgence_vitale">

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/ll_rectangle_bords_hauts_ronds"
                android:id="@+id/ll_hemorragie">
            <TextView
                    android:text="@string/hemorragie"
                    android:id="@+id/tv_hemorragie"
                    style="@style/tv_libelle_centre"/>
            <Button
                    android:text="@string/oui"
                    android:id="@+id/btn_hemorragie_oui"
                    android:background="@drawable/btn_indice_gravite"
                    android:layout_toStartOf="@+id/btn_hemorragie_non"
                    style="@style/btn_indice_gravite_centre_gauche"/>
            <Button
                    android:text="@string/non"
                    android:id="@+id/btn_hemorragie_non"
                    android:background="@drawable/btn_indice_non_gravite"
                    style="@style/btn_indice_non_gravite_centre_droite"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/ll_rectangle_bords_droits"
                android:id="@+id/ll_conscience">
            <TextView
                    android:text="@string/conscience"
                    android:id="@+id/tv_conscience"
                    style="@style/tv_libelle_centre"
                    android:layout_gravity="center"/>
            <Button
                    android:text="@string/oui"
                    android:id="@+id/btn_conscience_oui"
                    android:background="@drawable/btn_indice_non_gravite"
                    android:layout_toStartOf="@+id/btn_conscience_non"
                    style="@style/btn_indice_non_gravite_centre_gauche"/>
            <Button
                    android:text="@string/non"
                    android:id="@+id/btn_conscience_non"
                    android:background="@drawable/btn_indice_gravite"
                    style="@style/btn_indice_gravite_centre_droite"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/ll_rectangle_bords_droits"
                android:id="@+id/ll_ventilation">
            <TextView
                    android:text="@string/ventilation"
                    android:id="@+id/tv_ventilation"
                    style="@style/tv_libelle_centre"/>
            <Button
                    android:text="@string/oui"
                    android:id="@+id/btn_ventilation_oui"
                    android:background="@drawable/btn_indice_non_gravite"
                    android:layout_toStartOf="@+id/btn_ventilation_non"
                    style="@style/btn_indice_non_gravite_centre_gauche"/>
            <Button
                    android:text="@string/non"
                    android:id="@+id/btn_ventilation_non"
                    android:background="@drawable/btn_indice_gravite"
                    style="@style/btn_indice_gravite_centre_droite"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/ll_rectangle_bords_droits"
                android:id="@+id/ll_pouls_carotidien">
            <TextView
                    android:text="@string/pouls_carotidien"
                    android:id="@+id/tv_pouls_carotidien"
                    style="@style/tv_libelle_centre"/>
            <Button
                    android:text="@string/oui"
                    android:id="@+id/btn_pouls_carotidien_oui"
                    android:background="@drawable/btn_indice_non_gravite"
                    android:layout_toStartOf="@+id/btn_pouls_carotidien_non"
                    style="@style/btn_indice_non_gravite_centre_gauche"/>
            <Button
                    android:text="@string/non"
                    android:id="@+id/btn_pouls_carotidien_non"
                    android:background="@drawable/btn_indice_gravite"
                    style="@style/btn_indice_gravite_centre_droite"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>